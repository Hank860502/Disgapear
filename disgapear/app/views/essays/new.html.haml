= form_for :essay, url: essays_path do |f|

  - if @essay.errors.any?
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}= message

  .form-group
    = f.label :topic
    %br
    = f.text_field :topic, class: 'form-control'


  .form-group
    = f.label :description
    %br
    = f.text_field :description, class: 'form-control'

  .form-group
    = f.label :content
    %br
    = f.text_field :original, class: 'form-control'

  .form-group
    = f.label :word_limit
    %br
    = f.text_field :word_limit, class: 'form-control'
  .form-group
    = f.submit :'submit', class: 'btn btn-success'


