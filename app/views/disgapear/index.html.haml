.site-wrapper
	%img.img{:src => "../notepencoffee.jpeg"}/
	.site-wrapper-inner
		.cover-container
			.masthead.clearfix
				.inner
					%nav.navbar.navbar-inverse.navbar-fixed-top
						.container
							.navbar-header
								%button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
									%span.sr-only Toggle navigation
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar
								%a.navbar-brand{:href => "/"}
									%img.brand{:src => "logowhite.png"}
							#navbar.collapse.navbar-collapse
								%ul.nav.navbar-nav.pull-right
									%li
										%a{:href => "/"} Home
									%li
										%a{:href => "#about"} About
									-if logged_in
										%li
											%a{:href => "/logout"} Sign out
									-else
										%li
											%a{:href => "/login"} Sign in
			.inner.cover
				%img{:src => "logoblack.png"}
				%h1.cover-heading Disgapear
				%p.lead Disgapear is an online essay editing service. We hope to break down language barriers and narrow down cultural divides for those who are not English native speakers.
				%p.lead
					-if logged_in
						%a.btn.btn-lg.btn-default{:href => new_essay_path} Send your essay
					-else
						%a.btn.btn-lg.btn-default{:href => login_path} Send your essay
			.mastfoot
				.inner
					%p
						%span.glyphicon.glyphicon-copyright-mark{"aria-hidden" => "true"}>Disgapear. Inc.
